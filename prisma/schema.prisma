generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model Product {
  id        Int        @id @default(autoincrement())
  name      String
  reviews   Review[]   //When added empty
  concerns  Concern[]  // Optional, idk but could be used for direct look up
}

model Review {
  id         Int        @id @default(autoincrement())
  product    Product    @relation(fields: [productId], references: [id])
  productId  Int
  concerns   Concern[]  // It can start from empty
  comment    String?
  rate       Int
  skinType   Int
}

model Concern {
  id         Int      @id @default(autoincrement())
  value      String
  review     Review   @relation(fields: [reviewId], references: [id])
  reviewId   Int
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
}